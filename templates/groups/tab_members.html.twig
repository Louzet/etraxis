<div class="grid-row flex">

    <div class="grid-50 mobile-grid-100">
        <div class="fieldset">
            <div class="legend">{{ 'group.members' | trans }}</div>
            <div class="grid-row">
                <div class="grid-100">
                    <select class="grid-100 mobile-grid-100" size="20" multiple="multiple" :disabled="groupMembers.length === 0" v-model="usersToRemove">
                        <option v-for="user in groupMembers" :value="user.id">${ user.fullname }</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="grid-10 mobile-grid-100 flex-center">
        <div class="grid-row hide-on-mobile">
            <div class="grid-100">
                <button class="full-width fa fa-arrow-right" title="{{ 'button.remove' | trans }}" :disabled="usersToRemove.length === 0" @click="removeUsers"></button>
            </div>
            <div class="grid-100">
                <button class="full-width fa fa-arrow-left" title="{{ 'button.add' | trans }}" :disabled="usersToAdd.length === 0" @click="addUsers"></button>
            </div>
        </div>
        <div class="grid-row hide-on-desktop text-center">
            <div class="mobile-grid-50">
                <button class="full-width fa fa-arrow-down" title="{{ 'button.remove' | trans }}" :disabled="usersToRemove.length === 0" @click="removeUsers"></button>
            </div>
            <div class="mobile-grid-50">
                <button class="full-width fa fa-arrow-up" title="{{ 'button.add' | trans }}" :disabled="usersToAdd.length === 0" @click="addUsers"></button>
            </div>
        </div>
    </div>

    <div class="grid-50 mobile-grid-100">
        <div class="fieldset">
            <div class="legend">{{ 'users.others' | trans }}</div>
            <div class="grid-row">
                <div class="grid-100">
                    <select class="grid-100 mobile-grid-100" size="20" multiple="multiple" :disabled="otherUsers.length === 0" v-model="usersToAdd">
                        <option v-for="user in otherUsers" :value="user.id">${ user.fullname }</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

</div>

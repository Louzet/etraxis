{% extends 'base.html.twig' %}

{% set title = 'menu.settings' | trans %}

{% block content %}

    <div class="grid-50 mobile-grid-100">
        <div class="grid-row">
            {% include 'settings/profile.html.twig' %}
        </div>
        {% if not app.user.isAccountExternal %}
            <div class="grid-row">
                {% include 'settings/password.html.twig' %}
            </div>
        {% endif %}
    </div>

    <div class="grid-50 mobile-grid-100">
        <div class="grid-row">
            {% include 'settings/appearance.html.twig' %}
        </div>
        <div class="grid-row">
            {% include 'settings/timezone.html.twig' %}
        </div>
    </div>

{% endblock %}

{% block scripts %}

    <script>
        eTraxis.country  = '{{ country }}';
        eTraxis.external = {{ app.user.isAccountExternal ? 'true' : 'false' }};
    </script>

    <script src="{{ asset('js/settings/store.js')      }}"></script>
    <script src="{{ asset('js/settings/profile.js')    }}"></script>
    <script src="{{ asset('js/settings/appearance.js') }}"></script>
    <script src="{{ asset('js/settings/timezone.js')   }}"></script>

    {% if not app.user.isAccountExternal %}
        <script src="{{ asset('js/settings/password.js') }}"></script>
    {% endif %}

{% endblock %}

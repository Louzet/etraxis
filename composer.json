{
    "name": "etraxis/etraxis",
    "description": "Issue tracking system with customizable workflows.",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "support": {
        "forum": "https://gitter.im/etraxis",
        "issues": "https://github.com/etraxis/etraxis/issues",
        "wiki": "https://github.com/etraxis/etraxis/wiki",
        "source": "https://github.com/etraxis/etraxis"
    },
    "require": {
        "php": "^7.1.3",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "beberlei/DoctrineExtensions": "^1.1",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "league/iso3166": "^2.1",
        "league/oauth2-client": "^2.3",
        "league/oauth2-github": "^2.0",
        "league/oauth2-google": "^2.2",
        "league/tactician-bundle": "^1.1",
        "league/tactician-doctrine": "^1.1",
        "league/uri-components": "^1.8",
        "league/uri-schemes": "^1.2",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/asset": "*",
        "symfony/cache": "*",
        "symfony/console": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "*",
        "symfony/framework-bundle": "*",
        "symfony/ldap": "*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "*",
        "symfony/process": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "*",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/thanks": "^1.1",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*",
        "twig/extensions": "^1.5",
        "webinarium/php-dictionary": "^1.1",
        "webinarium/php-properties": "^1.0",
        "webinarium/symfony-lazysec": "^2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "nelmio/api-doc-bundle": "^3.3",
        "symfony/browser-kit": "*",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "*",
        "symfony/profiler-pack": "*",
        "symfony/web-server-bundle": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "eTraxis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eTraxis\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
